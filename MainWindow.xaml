<Window x:Class="Flow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flow"
        xmlns:Vlc="clr-namespace:Vlc.DotNet.Wpf;assembly=Vlc.DotNet.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize" WindowState="Maximized" WindowStyle="None">
    <Grid>
        <Vlc:VlcControl Name="VlcPlayer"/>
        <Image Name="Screen" Source="/Screen.jpg" Stretch="Fill"/>
        <StackPanel Name="Panel" MouseEnter="Panel_MouseEnter" MouseLeave="Panel_MouseLeave" Height="35" Opacity="0" VerticalAlignment="Top" Background="#66FFFFFF" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Style="{DynamicResource ButtonStyle1}" Width="35" BorderThickness="0" Click="ExitButton_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/reject.png"/>
                </Button.Background>
            </Button>
            <Button Style="{DynamicResource ButtonStyle1}" Width="35" BorderThickness="0" Click="PopupButton_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/minus.png"/>
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>
</Window>
